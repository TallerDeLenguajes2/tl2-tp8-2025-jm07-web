using tl2_tp8_2025_jm07_web.Models;
@model List<Presupuestos>

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1 justify-content-center">
                <li class="nav-item">
                    <a class="btn btn-primary" asp-controller="Presupuestos" asp-action="CrearPresupuesto">Crear Presupuesto</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<h2 class="text-center">LISTADO DE PRESUPUESTOS</h2>
<section>
    <article>
        <table class="table table-bordered bordered-info text-center">
            <thead class="table-dark">
            <th>Nombre del Destinatario</th>
            <th>Fecha</th>
            <th colspan="3">Acciones</th>
            </thead>
            <tbody>
                @{
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.nombreDestinatario</td>
                            <td>@item.FechaCreacion</td>

                            <td><a asp-controller="Presupuestos" asp-action="DetallePresupuesto" asp-route-id="@item.IdPresupuesto" class="btn btn-secondary">Detalle</a></td>
                            <td><a asp-controller="Presupuestos" asp-action="ModificarPresupuesto" asp-route-id="@item.IdPresupuesto" class="btn btn-secondary">Modificar</a></td>
                            <td><a asp-controller="Presupuestos" asp-action="EliminarPresupuesto" asp-route-id="@item.IdPresupuesto" class="btn btn-danger">Eliminar</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </article>
</section>